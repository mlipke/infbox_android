<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wme.mt.de.infbox_android_g43" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/infbox_logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.Infbox_ab" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InfoActivity"
            android:label="@string/activity_title"
            android:parentActivityName=".LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="wme.mt.de.infbox_android_g43.LoginActivity" />
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/activity_title"
            android:parentActivityName=".LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="wme.mt.de.infbox_android_g43.LoginActivity" />
        </activity>
        <activity
            android:name=".ItemsListActivity"
            android:label="@string/activity_title" >
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/activity_title" >
        </activity>
        <activity
            android:name=".TextDetailActivity"
            android:label="@string/activity_title" >
        </activity>
    </application>

</manifest>
